generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique
  password  String
  profilePhoto String?
  address   String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
 applicants Applicant[]
}

enum Role {
  USER
  ADMIN
}

// Jobs table added to match front-end job structure
model Job {
  id          String   @id @default(cuid())
  title       String
  company     String
  location    String
  country     String
  salaryMin   Int
  salaryMax   Int?
  vacancies   Int      @default(1)
  ageMin   Int
  ageMax   Int
  holidays    String      @default("sunday")
  currency    String
  type        String
  industry    String?
  experience  String?
  visaCategory String?
  contractPeriod String?
  benefitsAddc String?
  description String
  requirements Json
  applicantsCount  Int      @default(0)
  closingDate DateTime 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  applicants Applicant[]
  jobBenefits JobBenefit[]
}

model JobBenefit {
  id        Int      @id @default(autoincrement())
  jobId     String
  job       Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)
  benefitId Int
  benefit   Benefit  @relation(fields: [benefitId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@map("job_benifits")
}

model Applicant {
  id         String   @id @default(cuid())
  // link to the user who applied
  userId     Int?
  user       User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  // optional resume file path
  resumePath String?
  coverNote  String?
  jobId      String
  job        Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  @@unique([userId, jobId])
}

// Benefits stored separately for admin manage screen
model Benefit {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  jobBenefits JobBenefit[]

  @@map("benifits")
}

// Countries table for admin-managed countries
model Country {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  flagimg   String?
  createdAt DateTime @default(now())
}

// Industries table for admin-managed industries
model Industry {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
}